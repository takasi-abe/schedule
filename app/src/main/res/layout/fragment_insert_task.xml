<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".InsertTaskFragment" android:id="@+id/task">
    <TextView
            android:text="優先度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/spinner2" app:layout_constraintBottom_toBottomOf="@+id/spinner2"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toStartOf="@+id/spinner"
            tools:ignore="HardcodedText"/>
    <Spinner
            android:layout_width="86dp"
            android:layout_height="37dp"
            android:id="@+id/spinner2"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="16dp"
            android:entries="@array/genre"
            app:layout_constraintTop_toTopOf="@+id/textView5" app:layout_constraintBottom_toBottomOf="@+id/textView5"
            android:spinnerMode="dialog"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/calendarView"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="32dp"/>
    <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calendarView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintTop_toTopOf="@+id/editText2" app:layout_constraintBottom_toBottomOf="@+id/editText2"
            android:textSize="24sp" tools:ignore="HardcodedText"/>
    <TextView
            android:text="分類"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:textSize="24sp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="32dp" tools:ignore="HardcodedText"/>
    <Spinner
            android:layout_width="86dp"
            android:layout_height="37dp"
            android:id="@+id/spinner"
            app:layout_constraintTop_toTopOf="@+id/textView6" app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            android:entries="@array/priority"
            android:layout_marginEnd="24dp" android:spinnerMode="dialog"/>
    <Button
            android:text="保存"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/button" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>