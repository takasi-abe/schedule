<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".InsertTaskFragment" android:id="@+id/tasks">
    <TextView
            android:text="優先度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/genre" app:layout_constraintBottom_toBottomOf="@+id/genre"
            tools:ignore="HardcodedText" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="32dp"/>
    <Spinner
            android:layout_width="86dp"
            android:layout_height="37dp"
            android:id="@+id/genre"
            android:entries="@array/genre"
            app:layout_constraintTop_toTopOf="@+id/textView5" app:layout_constraintBottom_toBottomOf="@+id/textView5"
            android:spinnerMode="dialog" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="32dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/task"
            app:layout_constraintTop_toBottomOf="@+id/date" android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintTop_toTopOf="@+id/task" app:layout_constraintBottom_toBottomOf="@+id/task"
            android:textSize="14sp" tools:ignore="HardcodedText" app:layout_constraintEnd_toStartOf="@+id/task"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="日付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="14sp" tools:ignore="HardcodedText"
            app:layout_constraintBottom_toBottomOf="@+id/date" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/date" app:layout_constraintTop_toTopOf="@+id/date"/>
    <TextView
            android:text="分類"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="14sp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="32dp" tools:ignore="HardcodedText"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"/>
    <Spinner
            android:layout_width="86dp"
            android:layout_height="37dp"
            android:id="@+id/priority"
            android:entries="@array/priority"
            android:spinnerMode="dialog"
            app:layout_constraintTop_toTopOf="@+id/textView6" app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>
    <Button
            android:text="保存"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/button" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="@string/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            tools:text="2019/01/01" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2" app:layout_constraintGuide_begin="205dp"
                                                android:orientation="vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>